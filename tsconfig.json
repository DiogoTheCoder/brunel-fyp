{
	"compileOnSave": true,
	"compilerOptions": {
		"composite": true,
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true 
	},
	"exclude": [
		"/node_modules/**",
		"**/vscode-test/**",
		"**/out/**"
	]
}
