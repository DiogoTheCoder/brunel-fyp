{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"composite": true,
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"./node_modules",
		"./node_modules/*",
		"./node_modules/@types/node/index.d.ts",
		"**/out/**",
	],
}
