{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"outDir": "out",
		"lib": ["ES2019"],
		"sourceMap": true,
		"strict": true,
		"composite": true,
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs" : true,
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", ".vscode-test", "out"]
}
