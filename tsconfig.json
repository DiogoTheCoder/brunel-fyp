{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": ["ES2019"],
		"outDir": "out",
		"sourceMap": true,
		"strict": false, // temporary measure
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs" : true,
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", ".vscode-test"]
}